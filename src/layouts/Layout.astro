---
import Footer from '@components/Footer.astro'
import Header from '@components/Header.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Somos una empresa dedicada a la venta de materiales de construcción. Ofrecemos una amplia gama de productos de alta calidad para proyectos de construcción y remodelación. ¡Contáctanos para obtener los mejores materiales al mejor precio!"
    />
    <meta
      name="keywords"
      content="materiales de construcción, venta de materiales, construcción, remodelación, materiales de construcción en línea, productos de construcción, materiales de construcción de calidad, proveedor de materiales de construcción, suministros de construcción, ladrillos huecos, ladrillos HCCA, adhesivo para ladrillos, adhesivos para cerámicas, pastinas, revestimientos cementicios, revestimientos acrílicos, revoques monocapa, morteros proyectables, aditivos para morteros, impermeabilizantes"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  body {
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
  }
  main {
    display: flex;
    flex-direction: column;
    gap: 30px;
    flex: 1;
  }
</style>

<style is:global>
  :root {
    --color-primary: #f79030;
    --color-primary-light: #ffe3c9;
    --color-secondary: #24448d;
    --color-secondary-light: #95ade4;
    --color-dark: #313131;
    --color-dark-25: #3131313f;
    --color-light: #ffffff;
    --shadow-dark: #adadad3f;
    --font-size-title: 20px;
    --font-size-subtitle: 16px;
    --font-size-text: 15px;
  }
  html {
    font-family: 'Lato', sans-serif;
    color: var(--color-dark);
  }
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  button {
    background-color: transparent;
    border: none;
    padding: 5px;
    cursor: pointer;
  }
</style>
