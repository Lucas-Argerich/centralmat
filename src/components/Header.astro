<header>
  <img class="logo" src="/images/logo1.png" alt="Logo de la marca CentralMat" />
  <button class="hamburger" aria-label="Abrir menú de navegación">
    <img src="/icons/hamburger.svg" alt="icono de menú desplegable" aria-hidden="true">
  </button>
  <nav>
    <img src="/images/logo2.png" alt="Logo de la marca CentralMat">
    <ul>
      <li><a href="/">INICIO</a></li>
      <li><a href="/productos">PRODUCTOS</a></li>
      <li><a href="/servicios">SERVICIOS</a></li>
      <li><a href="/nosotros">NOSOTROS</a></li>
      <li><a href="/contacto">CONTACTO</a></li>
    </ul>
    <button class="close" aria-label="Cerrar menú de navegación">
      <img src="/icons/cross.svg" alt="icono de cerrar menú desplegable" aria-hidden="true">
    </button>
  </nav>
</header>

<style>
  header {
    height: 62px;
    box-shadow: 0 4px 8px 0 var(--shadow-dark);
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 25px;
    padding: 0 100px;
    position: relative;
  }

  .logo {
    width: 200px;
    height: 100%;
    object-fit: cover;
  }

  nav img {
    display: none;
  }

  nav button {
    display: none;
  }

  ul {
    display: flex;
    gap: 25px;
    list-style-type: none;
  }

  a {
    color: var(--color-secondary);
    text-decoration: none;
    font-weight: 600;
    font-size: var(--font-size-text);
  }

  a::after {
    content: '';
    display: block;
    width: 100%;
    height: 1px;
    background-color: black;
    opacity: 0;
  }

  a:is(:hover, :focus)::after {
    opacity: 1;
    transition: 300ms;
  }

  .hamburger {
    display: none;
  }

  @media screen and (max-width: 768px) {
    header {
      padding: 0 40px;
    }

    .hamburger {
      display: flex;
      flex-direction: column;
      gap: 6px;
    }

    .hamburger span {
      display: block;
      width: 30px;
      height: 2px;
      background: var(--color-secondary);
    }

    nav {
      width: 100%;
      height: calc(100dvh - 62px);
      position: absolute;
      bottom: 0;
      left: 0;
      display: none;
      flex-direction: column;
      align-items: center;
      gap: 40px;
      padding: 40px 0;
      transform: translateY(100%);
      background-color: var(--color-light);
    }

    nav.active {
      display: flex;
    }

    nav img {
      display: block;
      height: 100px;
      width: 145px;
      object-fit: cover;
    }

    ul {
      width: 100%;
      flex-direction: column;
      align-items: center;
      gap: 40px;
    }

    .close {
      display: flex;
    }

    .close img {
      width: auto;
      height: auto;
    }
  }
</style>

<script>
  const hamburger = document.querySelector(".hamburger")
  const nav = document.querySelector("nav")
  hamburger?.addEventListener("click", ()  => {
    nav?.classList.contains("active") ? nav?.classList.remove("active") : nav?.classList.add("active")
  })

  const close = document.querySelector(".close")
  close?.addEventListener("click", () => {
    nav?.classList.contains("active") && nav.classList.remove("active")
  })
</script>
