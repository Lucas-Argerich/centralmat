<style>
  header {
    height: 62px;
    overflow: hidden;
    box-shadow: 0 4px 8px 0 var(--shadow-dark);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 100px;
  }

  img {
    width: 200px;
    object-fit: cover;
  }

  ul {
    display: flex;
    gap: 25px;
    list-style-type: none;
  }

  a {
    color: var(--color-secondary);
    text-decoration: none;
    font-weight: 600;
    font-size: var(--font-size-text);
  }

  a::after {
    content: "";
    display: block;
    width: 100%;
    height: 1px;
    background-color: black;
    opacity: 0;
  }

  a:is(:hover, :focus)::after {
    opacity: 1;
    transition: 300ms;
  }
</style>
