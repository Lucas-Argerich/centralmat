---
interface Props {
  product: string
  provider: string
  image: string
  pageImage: string
  link: string
}

const { product, provider, image, pageImage, link } = Astro.props
---

<a href={link} target="_blank" class="product">
  <div class="pageImage" style={{ backgroundImage: 'url(' + pageImage + ')' }}>
    <img src={image} alt={'Imagen de ' + product} loading="lazy" />
  </div>
  <div class="titles">
    <h3>{product}</h3>
    <h4>{provider}</h4>
  </div>
  <span>Ver catalogo de {provider}</span>
</a>

<style>
  .product {
    min-height: 280px;
    flex: 0 0;
    display: flex;
    flex-direction: column;
    gap: 5px;
    color: var(--text-color);
    text-decoration: none;
    border: 1px solid #ccc;
    padding: 10px;
  }

  .product .pageImage {
    background-size: cover;
    width: 200px;
    height: 150px;
    object-fit: cover;
    border: 1px solid #ccc;
  }

  .product img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    background: var(--color-light);
  }

  .product .titles {
    display: flex;
    flex-direction: column;
  }

  .product .titles h3,
  .product .titles h4 {
    display: inline-block;
  }

  .product .titles h3 {
    font-size: var(--font-size-subtitle);
    font-weight: 600;
  }

  .product .titles h4 {
    font-size: var(--font-size-text);
    font-weight: 600;
    font-style: italic;
  }

  .product span {
    font-size: var(--font-size-text);
    text-decoration: underline;
    margin-top: auto;
  }

  .product:hover img {
    transition: 200ms;
    opacity: 0;
  }

  @media screen and (max-width: 512px) {
    .product {
      min-height: 240px;
    }

    .product .pageImage {
      width: 150px;
      height: 112.5px;
    }
  }
</style>
